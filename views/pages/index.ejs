<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../partials/head %>
</head>

<body>
  <script>
    // https://gist.github.com/kerimdzhanov/7529623turn
    function random(min, max) {
      return Math.random() * (max - min) + min;
    }
    function randomInt(min, max) {
      return Math.floor(Math.random() * (max - min + 1) + min);
    }
    function randomColor(alpha) {
      var r = parseInt(randomInt(0, 99), 16);
      var g = parseInt(randomInt(0, 99), 16);
      var b = parseInt(randomInt(0, 99), 16);
      var a = alpha ? parseInt(alpha, 16) / 255 : 100;
      return 'rgba(' + r + ', ' + g + ', ' + b + ', ' + a + ')';
    }
  </script>
  <script>
    $(document).ready(() => {
      var service = new AstroService();
      var astroPicOfDay = new AstroPicOfDay(service);
      ko.applyBindings(astroPicOfDay);
    });
  </script>

  <div id="main" class="container-fluid">
    <div class="alert alert-danger collapse mt-2" role="alert" id="alertError">
      <button type="button" class="close" data-bind="click: closeAlertError" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <strong data-bind="html: error"></strong>
    </div>
    <div class="alert alert-warning collapse mt-2" role="alert" id="alertWarning">
      <button type="button" class="close" data-bind="click: closeAlertWarning" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <strong data-bind="html: warning"></strong>
    </div>

    <div class="pt-3">
      <div class="row">
        <div class="col-6 col-sm-4 col-md-3 col-lg-2">
          <div class="form-group">
            <div class="input-group date" data-bind="dateTimePicker: fromDate">
              <span class="input-group-addon" id="from">From</span>
              <input type="text" class="form-control" aria-describedby="from">
              <span class="input-group-addon">
                <i class="fa fa-calendar" aria-hidden="true"></i>
              </span>
            </div>
          </div>
        </div>
        <div class="col-6 col-sm-4 col-md-3 col-lg-2">
          <div class="form-group">
            <div class="input-group date" data-bind="dateTimePicker: toDate">
              <span class="input-group-addon" id="to">To</span>
              <input type="text" class="form-control" aria-describedby="to">
              <span class="input-group-addon">
                <i class="fa fa-calendar" aria-hidden="true"></i>
              </span>
            </div>
          </div>
        </div>
      </div>

      <div data-bind="foreach: rows">
        <div class="d-flex d-row" data-bind="foreach: $data">
          <a tabindex="0" class="popover-dismiss" data-bind="attr:{title: titleAndDate, 'data-content': explanation}" data-toggle="popover"
            data-trigger="focus" data-placement="bottom">
            <!-- ko if: mediaType === 'image' -->
            <img class="img-fluid img-apod" data-bind="attr:{src: url}" />
            <!-- /ko -->
            <!-- ko if: mediaType === 'video' -->
            <iframe class="img-fluid img-apod" data-bind="attr:{src: url}" allowfullscreen></iframe>
            <!-- /ko -->
          </a>
        </div>
      </div>

      <div class="w-100" data-bind="visible: loading">
        <div class="d-flex justify-content-center pt-5 mt-5">
          <div class="progress w-50">
            <div class="progress-bar progress-bar-striped progress-bar-animated bg-success pt-5" role="progressbar" aria-valuenow="100"
              aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
          </div>
        </div>
      </div>

    </div>
  </div>

</body>

</html>